{
  "expo": {
    "name": "XXII Ventures Recruitment",
    "slug": "xxii-ventures-recruitment",
    "scheme": "xxii-ventures-recruitment",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.xxii.ventures.recruitment.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.xxii.ventures.recruitment.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to use the microphone for voice messages.",
          "speechRecognitionPermission": "Allow $(PRODUCT_NAME) to use speech recognition for voice messages."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
